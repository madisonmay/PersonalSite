    style

      *:link, *:visited, *:hover, *:active, *:focus {
        -webkit-transition:
          color .25s linear,
          background-color 1s linear,
          border-color .25s linear;
        transition:
          color .25s linear,
          background-color 1s linear,
          border-color .25s linear;
      }

      a:hover, a.hover, a:focus, a.focus {
        color: #526476 !important;
        cursor: pointer;
      }

      }
      .red-text {
        color: #F03F36;
      }

      .red:hover div, .red.hover div {
        background-color: #F03F36;
      }

      .red:hover a, .red.hover a {
        color: #F03F36 !important;
      }

      .red:active div, .red.active div {
        background-color: #F03F36 !important;
      }

      .red:active a, .red.active a {
        color: #F03F36 !important;
      }

      .green:hover div, .green.hover div {
        background-color: #8CC63F;
      }

      .green:hover a, .green.hover a {
        color: #8CC63F !important;
      }

      .green:active div, .green.active div {
        background-color: #8CC63F !important;
      }

      .green:active a, .green.active a {
        color: #8CC63F !important;
      }

      .blue:hover div, .blue.hover div {
        background-color: #1DAAE1;
      }

      .blue:hover a, .blue.hover a {
        color: #1DAAE1 !important;
      }

      .blue:active div, .blue.active div {
        background-color: #1DAAE1 !important;
      }

      .blue:active a, .blue.active a {
        color: #1DAAE1 !important;
      }


      .set-width {
        width: 175px;
        text-align: center;
      }

      li a {
        font-size: 18px !important;
        cursor: pointer;
      }

      .indicator {
        width: 100%;
        height: 5px;
      }

    script
      $(document).ready(function() {
        $('li').click(function() {
          $('li.active').removeClass('active');
          $(this).addClass('active');
        })
      })

